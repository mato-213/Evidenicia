      <class>projectSI.persistence.entities.PubEpcKody</class>
      <class>projectSI.persistence.entities.PubAutori</class>
      <class>projectSI.persistence.entities.PubPublikacie</class>
      <class>projectSI.persistence.entities.Person</class>
      <class>projectSI.persistence.entities.PubEpcSkupiny</class>
      <class>projectSI.persistence.entities.PubEpcKodyUkazovatele</class>
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
         <!--property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/unistatsdb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.validator.apply_to_ddl">false</property-->
      </properties>
   </persistence-unit>
</persistence>
